{
  "name": "observatory-finder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://theeveeye.github.io/BackroadsApp",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently -k -n VITE,ELECTRON -c blue,magenta \"vite --port 5173\" \"wait-on tcp:5173 && electron electron\"",
    "build": "tsc -b && vite build",
    "build:electron": "vite build --mode electron",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build && cp build/index.html build/404.html && gh-pages -d build",
    "dist": "npm run build:electron && electron-builder",
    "dist:mac": "npm run build:electron && electron-builder --mac dmg",
    "dist:win": "npm run build:electron && electron-builder --win portable"
  },
  "dependencies": {
  "react-router-dom": "^6.26.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^31.7.7",
    "electron-builder": "^25.1.8",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^5.4.8",
    "wait-on": "^8.0.1"
  },
  "build": {
    "productName": "Backroads",
    "appId": "com.backroads.app",
    "asar": true,
    "files": [
      "build/**",
      "electron/**",
      "package.json"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    }
  }
}
