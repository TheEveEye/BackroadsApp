# EVE Online SSO
VITE_EVE_CLIENT_ID=your-client-id
VITE_EVE_CLIENT_SECRET=your-client-secret
VITE_EVE_CALLBACK_URL=http://localhost:5173/auth/callback
VITE_EVE_SCOPES=publicData
VITE_EVE_AUTH_URL=https://login.eveonline.com/v2/oauth/authorize
VITE_EVE_TOKEN_URL=https://login.eveonline.com/v2/oauth/token
